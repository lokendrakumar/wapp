<style>
  @media (min-width: 992px){
    .modal-lg {
      width: 900px!important;
    }
  }
  textarea {
    overflow: auto;
    vertical-align: top;
    display: block;
    width: 100%;
    margin: 0px auto;
  }
</style>
<div id="addAJob" class="modal fade add-job-modal" style="overflow:auto;">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3 class="modal-title job-modal-title" style="text-align: center"><%=dashboardObj.Create_Profile_Heading%></h3>
        </div>
        <div class="modal-body">
          <!-- <div class="input-group"> -->
            <input type="text" class="form-control job-title-input"  placeholder='<%=dashboardObj.Create_Profile_Name_Placeholder%>' aria-describedby="basic-addon2" style="width: 100%">
            <small class="job-name-required" style="display:none; color:red;">Required</small>
          </br>
          <input type="text" class="form-control job-description-input"  placeholder='<%=dashboardObj.Create_Profile_Description_Placeholder%>' aria-describedby="basic-addon2" style="width: 100%">
          <small class="job-name-required" style="display:none; color:red;">Required</small>
          <!-- </div> -->
        </div>
         <div class="modal-footer" style="text-align: left !important">
          <span>Select the details you want from candidates</span>
          <div class="row">
            <div class="col-md-6">
              <div class="checkbox">
                <label><input type="checkbox" value=""><%=dashboardObj.Details.Name%></label>
              </div>
            </div>
            <div class="col-md-6">
              <div class="checkbox">
                <label><input type="checkbox" value=""><%=dashboardObj.Details.PhoneNumber%></label>
              </div>
            </div>
          </div>
          <div class="row">
          <div class="col-md-6">
            <div class="checkbox">
              <label><input type="checkbox" value=""><%=dashboardObj.Details.Email%></label>
            </div>
            </div>
            <div class="col-md-6">
              <div class="checkbox">
                <label><input type="checkbox" value=""><%=dashboardObj.Details.Experience%></label>
              </div>
            </div>
          </div>
          <div class="row">
          <div class="col-md-6">
              <div class="checkbox">
                <label><input type="checkbox" value=""><%=dashboardObj.Details.College%></label>
              </div>
            </div>
            <div class="col-md-6">
              <div class="checkbox">
                <label><input type="checkbox" value=""><%=dashboardObj.Details.PreviousCompany%></label>
              </div>
            </div>
          </div>
          <button class="btn btn-danger create-job-button" style="width:100%; margin-top: 3%"><%=dashboardObj.Button_Create_text%></button>
        </div>
      </div>
    </div>
  </div>

  <div id="writeQuestionModal" class="modal fade write-question-modal" style="overflow:auto;" data-id="">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" style=" text-align: center"> Write Questions</h4>
        </div>
        <div class="modal-body add-question-modal-body">
          <span class="add-question-text-help help-block" style="margin-top: 5px">Add question you want to ask to candidates for respective job role</span>
          <div>
            <textarea placeholder="Write a question here..." class="modal-text-area"></textarea>
            <div class="submit-button-div">
              <button class="btn-xs btn-danger pull-right button-add-question" style="margin-top:1%; margin-right:1%">Add question</button>
            </div>
            <small class="error-add-question" style="display:none; color:red;">Add questions for the applicants</small>

            <!-- <button class="btn btn-default" style="margin-top:1%">+ Add a question</button>  -->
          </div>
          <button class="btn btn-danger next-button-to-congrats" style="width:100%; margin-top: 3%;">Finish</button>
        </div>
      </div>
    </div>
  </div>

  <div id="congratsModal" class="modal fade congrats-modal" style="display: none; overflow: auto !important;">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body" style="text-align: center; margin-top: 1%;">
          <h4 style="text-align: center;">Congrats</h4>
          <span style="text-align: center;"><%=dashboardObj.CongratsMessage%></span>
          <button class="btn btn-danger okay-button" style="width:60%; margin-top:2%">Okay</button>
        </div>
      </div>
    </div>
  </div>

  <div id="widget-modal" class="modal fade widget-modal" style="display: none; overflow: auto !important;">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-body" style="text-align: center; margin-top: 1%;">
          <p class="text-left">Step 1: Place the following JavaScript on your page once, ideally just before the end of body tag.</p>
          <textarea class="widget-modal-text-area-js" onclick="this.select()"></textarea>
          </br>
          <p class="text-left">Step 2: Place the following code for your plugin wherever you want the plugin to appear on your page.</p>
          <textarea class="widget-modal-text-area-html" onclick="this.select()"></textarea>
        </div>
      </div>
    </div>
  </div>


