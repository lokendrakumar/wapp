<% if (pagename === 'homepage') { %>
<script>
$(document).ready(function(){
  $("#scrollanimation").find(".small-4.columns.b-ws-top.b-ws-bottom").each(function(){
    $(this).hide();
  });

  var _flag1 = false;
  var _flag2 = false;
  var _flag3 = false;

  $(window).scroll(function(){

    if ($(this).scrollTop() > 0 && $(this).scrollTop() <268){
      $("#nav").removeClass('reveal');
    } else if ($(this).scrollTop() > 560){
      $("#nav").addClass('reveal');
    }

    if ($(this).scrollTop() > 269 && $(this).scrollTop() <419 && !_flag1){
      $("#scrollanimation .columns:first-child").show();
      $("#scrollanimation .columns:first-child").addClass('animated fadeInDown');
      _flag1 = true;
    } else if($(this).scrollTop() > 420 && $(this).scrollTop() <559 && !_flag2) {
      $("#scrollanimation .columns:nth-child(2)").show();
      $("#scrollanimation .columns:nth-child(2)").addClass('animated fadeInDown');
      _flag2 = true;
    } else if($(this).scrollTop() > 560 && !_flag3) {
      $("#scrollanimation .columns:nth-child(3)").show();
      $("#scrollanimation .columns:nth-child(3)").addClass('animated fadeInDown');
      _flag3 = true;
    } 
  });
  
});
</script>
<% } %>
