<% var onMobile = ['mobile', 'table'].indexOf(uaData.device.type) > -1 %>

<!DOCTYPE html>

<html class="no-js" lang="en">
<head>

  <link rel="icon" type="image/png" href="/img/favicon.ico">
  <link rel="alternate" href="android-app://me.frankly/http/frankly.me" />
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title><%= _.isString(title) ? title : 'Frankly.me | Ask me anything' %></title>

  <%- include(view('partials/layout/styles')) %>
  <%- include(view('partials/meta/common')) %>
  <%- include(view('partials/meta/facebook')) %>
  <%- include(view('partials/meta/google')) %>
  <%- include(view('partials/meta/twitter')) %>

  <% if (! onMobile) { %>
    <script src="/js/pace.min.js"></script>
  <% } %>

  <script src="/js/modernizr.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <script src="/js/pushstream.js"></script>
  <script src="/js/xss-filters.js"></script>



  <% if(pagename === 'homepage') { %>
    <script>
      if(window.location.hash) {
        window.location = "http://frankly.me.s3-website-ap-southeast-1.amazonaws.com/" + window.location.hash.substr(2);
      }
    </script>
  <% } %>

    <!-- Google Analytics -->
