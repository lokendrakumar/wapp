</head>
<% var from = typeof velfie == "undefined" ? '' : velfie; %>
<% var token = typeof token == "undefined" ? '' : token; %>
<% if (me) { %>
  <%if (pagename === 'askPopup' ){ %>
    <body class="<%= pagename %>" data-source="<%= pagename %>" data-profile="<%= profile.username%>" data-id="<%=me.id%>" data-from="<%=from ? from : ''%>" data-username="<%=me.username%>">
  <%} else {%>
    <body class="<%= pagename %>" data-source="<%= pagename %>" data-from="<%=from ? from : ''%>" data-username="<%=me.username%>" data-tok="<%=token%>">
  <%}%>
<%} else { %>
  <%if (pagename === 'askPopup' ){ %>
    <body class="<%= pagename %>" data-source="<%= pagename %>" data-profile="<%= profile.username%>" data-from="<%=from ? from : ''%>">
  <%} else {%>
    <body class="<%= pagename %>" data-source="<%= pagename %>" data-from="<%=from ? from : ''%>">
  <%}%>
<%}%>
