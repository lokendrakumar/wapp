<% var askBoxId = pagename+'-askBox' %>
<div class="row" id="<%= askBoxId %>" data-user-id="<%= profile.id %>" data-target="<%= '/ask/'+profile.id %>">
  <script>
    $(function () {
      app.components.askBox($('#<%= askBoxId %>'), false);
    });
  </script>
  <div class="columns small-9">
    <div class="panel">
      <div class="alert-box radius large share-alert success" data-alert style="display:none;">
        <div class="row">
          <div class="small-7 columns">
            <p class="wc nm">I just asked <%= profile.name || profile.username %>
              <i class="last-question"></i>
            </p>
          </div>
          <div class="small-2 columns">
            <div id="icon-share-<%= askBoxId %>"
               data-url="">
            </div>
            <br/>
            Share 
        </div>
        </div>
        <a class="close" href="#">&times;</a>
      </div>

      <div class="row">
        <!-- <div class="small-12 columns s-ws-top">
          <div data-alert class="alert-box radius" id="authModalMessage" style="display:none;"></div>
        </div>
        <div id="alert-hook2" class="small-12 columns" style="display:none;">
          <div data-alert="" id="alert-box2" class="alert-box radius text-center">Loading...
            <a href="#" class="close">Ã—</a>
          </div>
        </div> -->
        <div class="columns small-9">
          <textarea class="alt nm brr postArea" data-maxlength="300" data-minlength="15" placeholder="Ask something sensible" rows="1" style="min-height:1rem;"></textarea>
        </div>

        <div class="columns small-3">
          <div class="button fullwidth small nm postBtn">
            Ask Question
          </div>
          <div class="switch tiny round m-ws-top anonymousDiv" style="display:none;">
            <input id="anon" type="checkbox">
            <label class="anonLabel" for="anon" style="vertical-align:middle;"></label><span class="scolor2 s2 s-ws-left anonymousSpan"> Anonymous</span>
          </div>

          <div class="scolor s s-ws-top countDisplay" style="display:block;">
            <span class="character-count"></span>
          </div>
            <!-- <div class="loader">
              <svg class="circular">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10"/>
              </svg>
            </div> -->
        </div>
      </div>
    </div>
  </div>
</div>
