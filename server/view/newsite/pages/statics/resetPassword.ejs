<%- include(partials.top) %>

<!-- body starts here -->
<div class="row">
    <div class="col s10 m6 l4 offset-l4 offset-m3 offset-s1 align-center" id="resetPasswordDiv"
         data-token="<%= token %>">
        <script>
            $(function () {
                app.components.resetPassword($('#resetPasswordDiv'));
            });
        </script>
        <div class="card center-align">
            <h5 style="color: #000; font-weight: 300;">Reset Password</h5>

            <div class="row">
                <div class="col s12">
                    <label>Create new password
                        <input type="password" class="newPassword">
                    </label>
                    <small class="passwordBlankMessage error" style="display: none">Enter new password</small>
                </div>

               </div>
            <div class="row">
                <div class="col s12">
                    <label>Retype new password
                        <input type="password" class="confirmNewPassword">
                    </label>
                    <small class="passwordMatchError error" style="display :none;">Password Do Not Match</small>
                    <small class="confirmPasswordBlankMessage error" style="display :none;">Retype new password</small>
                </div>
            </div>
            <div class="row">
                <div class="col l6 m6 s8 offset-l3 offset-m3 offset-s2">
                    <div class="btn small fullwidth alt reset-password-btn">Change Password</div>

                </div>
            </div>
        </div>
    </div>
</div>

<!-- body ends here -->
<%- include(partials.bottom) %>
