<%- include(partials.top) %>

<div class="row">
    <div class="small-12 medium-8 large-4 columns small-centered b-ws-top b-ws-top-p">
        <div class="panel">
            <div class="row auth" id="loginPage">
                <script>
                    $(function () {
                                app.components.loginPage($('#loginPage'));
                            }
                    );
                </script>
                <input type="hidden" class="hiringRedirectionField" data-value='<%= from %>'></input>
                <div class="s-ws-top small-5 columns text-left">
                    <div class="scolor2 s cs frankly-back" style="display:none;">
                        Back
                    </div>
                </div>

                <div class="small-12 columns">
                    <div data-alert class="alert-box radius" id="authModalMessage" style="display:none;">
                    </div>
                </div>
                <div id="alert-hook2" class="small-12 columns" style="display:none;">

                    <div data-alert="" id="alert-box2" class=" alert-box radius text-center">
                        Welcome back to frankly.me.
                        Please login to continue
                        <a href="#" class="close">
                            Ã—
                        </a>
                    </div>

                </div>
                <div class="authModalClass">
                    <div class="small-12 columns m-ws-top m-ws-bottom" id="socialBtn" style=<%=from==='/dashboard' ? 'display:none':''%>>
                        <div class="button fullwidth fb">
                            <i class="icon-facebook left">
                            </i>
                            Sign in with Facebook
                        </div>
                        <div class="button fullwidth twt">
                            <i class="icon-twitter left">
                            </i>
                            Sign in with Twitter
                        </div>
                        <div class="button fullwidth ggl">
                            <i class="icon-google left">
                            </i>
                            Sign in with Google
                        </div>
                    </div>
                    <div class="small-12 columns text-center scolor xs-ws-top" style=<%=from==='/dashboard' ? 'display:none':''%>>
                        <i>
                            or
                        </i>
                    </div>

                    <div class="small-12 columns m-ws-top m-ws-bottom hide-if-form text-center" style=<%=from==='/dashboard' ? '':'display:none'%>>
                        <h3> Frankly DashBoard </h3>
                        </br>
                        <h4>Login / SignUp</h4>
                    </div>    

                    <div class="small-6 columns s-ws-bottom s-ws-top hide-if-form">
                        <div class="xs-ws-top scolor cs s2" id="loginTrg">
                            Already a user?
                        </div>
                    </div>

                    <div class="small-6 columns s-ws-bottom s-ws-top hide-if-form">
                        <div class="button secondary alt fullwidth tiny signUpTrg">
                            Create New Account
                        </div>
                    </div>
                </div>

                <div class="small-12 columns s-ws-top" style='display:none' id="loginDisplay">

                    <form id="loginForm" onsubmit="javascript:return false;">
                        <div class="row">
                            <div class="large-12 columns email-field">
                                <label>
                                    Your Email Address
                                    <input type="text" name="email" id="email" required/>
                                </label>

                            </div>
                        </div>
                        <div class="row">
                            <div class="large-12 columns password-field">
                                <label>
                                    Your Password
                                    <input type="password" id="password" name="password" required/>
                                </label>

                            </div>
                        </div>
                        <div class="row">

                            <div class="small-12 columns">
                                <button type="submit" id="login-btn"
                                        class=" login-btn button fullwidth small alt xs-ws-top fullwidth">
                                    Sign In
                                </button>
                            </div>
                        </div>
                        <div class="row s">
                            <div class="text-left small-6 columns s xs-ws-top">
                                <a href="#" class="forgot-password">
                                    Forgot password?
                                </a>
                            </div>
                            <div class="text-right small-6 columns s scolor xs-ws-top">
                                <input type="checkbox" checked/>
                                Keep me signed in
                            </div>
                        </div>
                    </form>
                    <div class="small-6 columns s-ws-bottom s-ws-top hide-if-form" style='display:none'>
                        <div class="button secondary alt fullwidth tiny" id="signUpTrg">
                            Create New Account
                        </div>
                    </div>
                </div>

                <div class="small-12 columns s-ws-top" style="display:none;" id="signupDisplay">
                    <form id="signupForm" onsubmit="javascript:return false;">
                        <div class="row">
                            <div class="large-12 columns email-field">
                                <label>
                                    Your Name
                                    <input type="text" id="name" required pattern="^[a-zA-Z0-9 _]*$"
                                           title="Special characters are not allowed"/>
                                </label>

                            </div>
                        </div>
                        <div class="row">
                            <div class="large-12 columns password-field">
                                <label>
                                    Your Email
                                    <input type="email" id="email" required/>
                                </label>

                            </div>
                        </div>
                        <div class="row">
                            <div class="large-12 columns password-field">
                                <label>
                                    Create New Password
                                    <input type="password" id="password" required/>
                                </label>

                            </div>
                        </div>
                        <div class="row" >

                            <div class="small-12 columns" >
                                <button id="register-btn"
                                        class="register-btn button fullwidth small alt xs-ws-top fullwidth">
                                    Create
                                    New Account
                                </button>
                            </div>
                        </div>
                        <div class="row s">
                            <div class="small-6 columns s xs-ws-top">

                            </div>
                            <div class="small-6 columns s scolor xs-ws-top">
                                <input type="checkbox" checked/>
                                Keep me signed in
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include(partials.bottom) %>
    