
<!-- Modal Structure -->
<div id="frankly-auth-modal" class="modal modal-small authModal login-modal" style ='display:inline-block'>

  <script>
    $(function () {
      app.components.authModal($('.authModal'));
    });
  </script>

  <!--login screen-->
  <div class="card-panel login-panel-background section-social">
    <div class="back-arrow"></div>

    <div class="row">
      <div class="form-login">
        <h6 class="center"> Let's get started</h6>
        <div class="row margin-bottom-10">
          <div class="col s12">
            <a class="btn waves-effect waves-light btn-facebook" name="action"><i class="icon-facebook left"></i> SIGN UP WITH FACEBOOK</a>
          </div>
        </div>

        <div class="row col-fb">
          <div class="col s4">
            <a class="waves-effect waves-light btn btn-social bg-google btn-google"><i class="icon-google"></i></a>
          </div>

          <div class="col s4">
            <a class="waves-effect waves-light btn btn-social bg-twitter btn-twitter"><i class="icon-twitter"></i></a>
          </div>

          <div class="col s4">
            <a class="waves-effect waves-light btn btn-social bg-mail button-open-email"><i class="icon-email"></i></a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--login screen-->

  <!--email screen-->
  <div class="card-panel login-panel-background section-email" style="display: none">
    <div class="back-arrow">
      <i class="gray-text text-darken-2 mdi-hardware-keyboard-arrow-left small back-button"></i>
    </div>

    <div class="row">
      <div class="form-login">
        <h6 class="center"> Let's get started</h6>
        <div class="row">
          <div class="input-field col s12">
            <input class="input-email" placeholder="Enter your email" type="email">
          </div>
          <div class="button-right right">
            <button class="btn waves-effect waves-light button-bg button-email-next" name="action">NEXT</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--email screen-->

  <!--Done-->
  <div class="card-panel login-panel-background section-name" style="display: none">
    <div class="back-arrow">
      <i class="gray-text text-darken-2 mdi-hardware-keyboard-arrow-left small back-button "></i>
    </div>

    <div class="row">
      <div class="form-login">
        <h6 class="center"> Let's get started</h6>
        <div class="row">
          <div class="input-field col s12">
            <input class="input-name" placeholder="Enter your name" type="text">
          </div>
          <div class="button-right right">
            <button class="btn waves-effect waves-light button-bg button-name-done" name="action">NEXT</button>
          </div>
        </div>
      </div>
     </div>
    </div>
  <!--Done-->

  <!--LogIn-->
  <div class="card-panel login-panel-background section-password" style="display: none">
    <div class="back-arrow">
      <i class="gray-text text-darken-2 mdi-hardware-keyboard-arrow-left small back-button"></i>
    </div>
    <div class="row">
      <div class="form-login">
        <h6 class="center"> Let's get started</h6>
        <div class="row">
          <div class="input-field col s12">
            <input class="input-password" placeholder="Password" type="password">
          </div>

          <div class="col s6">
            <a name="email" class="grey-text left xs-font-size forget-password-label">Forgot Password.?</a>
          </div>

          <div class="button-right right">
            <button class="btn waves-effect waves-light button-bg button-login" name="action">LOG IN</button>
          </div>
        </div>
      </div>
     </div>
    </div>

  <!--LogIn-->

  <!--Password recover-->
  <div class="card-panel login-panel-background section-password-recover" style="display: none">
    <div class="back-arrow">
      <i class="gray-text text-darken-2 mdi-hardware-keyboard-arrow-left small back-button"></i>
    </div>
    <div class="row">
      <div class="form-login">
        <h6 class="center">Enter Email</h6>
        <div class="row">
          <div class="input-field col s12">
            <input name="email" class="input-forget-password" placeholder="Enter Email" type="text">
          </div>
          <div class="button-right right">
            <button class="btn waves-effect waves-light button-bg button-send-email" name="action">Submit</button>
          </div>

        </div>
      </div>
    </div>
  </div>

  <!--Password recover-->
<!--.container-->
</div>
