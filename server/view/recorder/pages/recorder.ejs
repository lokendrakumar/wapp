<html class="no-js" lang="en">
  <head>


    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <link rel="icon" type="image/png" href="/img/favicon.ico">
    <title>Recorder</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">


    <!--
      <link href="/css/app.css" rel="stylesheet">
    -->

    <link href= "https://fontastic.s3.amazonaws.com/kCG2HLP9avBFEWJu2yZ2zd/icons.css" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.96.1/css/materialize.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="/js/jquery.countdown360.min.js"></script>
    <style>
      .item {
          position: relative;
          float: left;
      }

      .item h2 {
          text-align:center;
          position: absolute;
          line-height: 125px;
          width: 100%;
      }

      svg {
         -webkit-transform: rotate(-90deg);
          transform: rotate(-90deg);
      }

      .circle_animation {
        stroke-dasharray: 195; /* this value is the pixel circumference of the circle */
        stroke-dashoffset: 195;
        transition: all 1s linear;
      }

      .btn-follow {
        color: #FA5155;
        border: 1px solid #FA5155;
        border-radius: 5px;
        padding: 0px 10px;
        margin: 0px 30px 10px 0px; }

      .modal.modal-small.authModal {
          min-height: 400px;
      }

      .login-panel-background{background: #f4f4f4;padding:0px 20px;min-height: 300px!important;max-width:390px!important;margin:0px auto!important;}
      .back-arrow{color:#D0CFCF;height:60px}
      /*.form-login{padding:0px 40px!important;}*/
      .form-login input[type="email"], .form-login input[type="text"], .form-login input[type="password"]{background: #ffffff;border-radius: 3px;border:0px;height: 35px!important;}
      .form-login h6{font-size:12px;font-weight:500;color:#7E7E7E;margin-bottom: 35px;}
      .button-bg, .button-bg:hover, .button-bg:focus{background: #3CB878;border-radius: 5px;font-size: 12px;font-weight: bold;height:45px;}
      .button-right{padding:0px 12px;}
      .btn-facebook, .btn-facebook:hover, .btn-facebook:focus{width:100%;background: #004A80!important;padding: 5px 15px;border-radius: 6px;height:45px;font-size: 14px;font-weight: bold;text-transform: uppercase;}
      .btn-social{height:45px;padding: 5px 15px;width: 105%;border-radius: 6px;text-transform: uppercase;}
      .bg-google,.bg-google:hover, .bg-google:focus{background: #E2282F!important;}
      .bg-twitter, .bg-twitter:hover, .bg-twitter:focus{background: #00BFF3!important;}
      .bg-mail, .bg-mail:hover, .bg-mail:focus{background: #3CB878!important;}


      .col-fb {margin-left: 5px;}
      .col-fb .col.s4 {margin: 0 -5px;width: 35%;}
      .modal.modal-small.authModal {
          min-height: 300px;
          background: transparent;
      }
      @media screen and(min-width:767px)
      {


        .login-modal{width:390px!important;}

      }

      @media screen and(max-width:320px)
      {
      .login-modal{width:100%!important;}
      }
    </style>
  </head>

  <body>
    <% var onMobile = ['mobile', 'table'].indexOf(uaData.device.type) > -1 %>


    <!-- Modal Structure -->
    <div id="frankly-auth-modal" class="modal modal-small authModal login-modal">

      <script>
        $(function () {
          app.components.authModal($('.authModal'));
        });
      </script>

      <!--login screen-->
      <div class="card-panel login-panel-background section-social">
        <div class="back-arrow"></div>

        <div class="row">
          <div class="form-login">
            <h6 class="center"> Let's get started</h6>
            <div class="row margin-bottom-10">
              <div class="col s12">
                <a class="btn waves-effect waves-light btn-facebook" name="action"><i class="icon-facebook left"></i> FACEBOOK</a>
              </div>
            </div>

            <div class="row col-fb">
              <div class="col s4">
                <a class="waves-effect waves-light btn btn-social bg-google btn-google"><i class="icon-google"></i></a>
              </div>

              <div class="col s4">
                <a class="waves-effect waves-light btn btn-social bg-twitter btn-twitter"><i class="icon-twitter"></i></a>
              </div>

              <div class="col s4">
                <a class="waves-effect waves-light btn btn-social bg-mail button-open-email"><i class="icon-email"></i></a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!--login screen-->

      <!--email screen-->
      <div class="card-panel login-panel-background section-email" style="display: none">
        <div class="back-arrow">
          <i class="gray-text text-darken-2 mdi-hardware-keyboard-arrow-left small back-button"></i>
        </div>

        <div class="row">
          <div class="form-login">
            <h6 class="center"> Let's get started</h6>
            <div class="row">
              <div class="input-field col s12">
                <input class="input-email" placeholder="Enter your email" type="email">
              </div>
              <div class="button-right right">
                <button class="btn waves-effect waves-light button-bg button-email-next" name="action">NEXT</button>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!--email screen-->

      <!--Done-->
      <div class="card-panel login-panel-background section-name" style="display: none">
        <div class="back-arrow">
          <i class="gray-text text-darken-2 mdi-hardware-keyboard-arrow-left small back-button "></i>
        </div>

        <div class="row">
          <div class="form-login">
            <h6 class="center"> Let's get started</h6>
            <div class="row">
              <div class="input-field col s12">
                <input class="input-name" placeholder="Enter your name" type="text">
              </div>
              <div class="button-right right">
                <button class="btn waves-effect waves-light button-bg button-name-done" name="action">NEXT</button>
              </div>
            </div>
          </div>
         </div>
        </div>
      <!--Done-->

      <!--LogIn-->
      <div class="card-panel login-panel-background section-password" style="display: none">
        <div class="back-arrow">
          <i class="gray-text text-darken-2 mdi-hardware-keyboard-arrow-left small back-button"></i>
        </div>

        <div class="row">
          <div class="form-login">
            <h6 class="center"> Let's get started</h6>
            <div class="row">
              <div class="input-field col s12">
                <input class="input-password" placeholder="Password" type="password">
              </div>
              <div class="button-right right">
                <button class="btn waves-effect waves-light button-bg button-login" name="action">LOG IN</button>
              </div>

            </div>
          </div>
         </div>
        </div>

      <!--LogIn-->
    </div><!--.container-->


    <div class="frankly-card recorderClass" data-type="<%=type%>" data-resource="<%=resourceId%>" data-onmobile="<%= onMobile ? '1' : '0' %>" data-page-url="<%=sourceUrl%>" data-widget="<%=widget%>" style="width: 280px; margin: auto;">
      <script>
        $(function () {
          app.components.recorder($('.recorderClass'));
        });
      </script>
      <!-- <div class="card-header black white-text">
        progressbar holder
      </div> -->


      <div class="card-content videoContainer">
        <div class="videoHolder">
          <video autoplay data-crop-to-fit style="min-height: 500px; width: 100%;"></video>
          <audio style="display: none;"></audio>
        </div>

        <% if (['mobile', 'tablet'].indexOf(uaData.device.type) > -1) { %>
          <input type="file" name="answerVideoRecord" style="opacity:0;display:block;position:absolute;width:100%;height:100%;z-index:99;top:0;left:0;cursor:pointer" accept="video/*" capture />
          <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;" class="valign-wrapper red lighten-3 mobileFirstScreen" >
            <div class="valign center-align white-text" style="width: 100%"> <h3>Tap to record</h3> </div>
          </div>
        <% } %>
        <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; display: none;" class="valign-wrapper red lighten-3 mobileUploadScreen" >
          <div class="valign center-align white-text" style="width: 100%"> <img src="https://www.brown.edu/sites/default/themes/pawtuxet/img/loader-larger.gif" style="width: 100px"><p>Uploading....please wait</p> </div>
        </div>

        <div style="position: absolute; bottom: 0px; left: 105px;">
          <div class="item html recordBtn" style="cursor: pointer; <%= onMobile ? 'display: none' : '' %>">
            <svg width="80px" height="80px" xmlns="http://www.w3.org/2000/svg">
              <g>
                <circle id="circle" class="circle_animation" r="30.85699" cy="40" cx="40" stroke-width="8" stroke="#d3d3d3" fill="red"></circle>
              </g>
            </svg>
            <div style="position: absolute; bottom: 29px; left: 25px; color: white;" class="circleText">Start</div>
          </div>
        </div>
        <% if (!onMobile) {%>
          <div style="position: absolute; bottom: 15px; left: 18px; display: none;" class="continueHolder">
            <div class="btn reject red lighten-2" style="margin-left: 10px;">Reject</div>
            <div class="btn continue green lighten-2">Continue</div>
          </div>
        <% } %>
      </div>
      <a class="btn-floating btn-large waves-effect waves-light grey lighten-2 attachButton" style="position: fixed; top: 250px; right: 10px; width: 30px; height: 30px; box-shadow: none;"><i class="material-icons" style="line-height: 30px">attach_file</i></a>
      <input type="file" class="attachedVideo" accept="video/*" style="display:none;"/>
    </div>
    <!-- body ends here -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.96.1/js/materialize.min.js"></script>
    <script type="text/javascript">
      $( document ).ready(function(){
        $('.modal-trigger').leanModal();
      });
    </script>



    <% if (!onMobile) {%>
      <script src="/js/MediaStreamRecorder.js"></script>
    <%}%>
    <script src="/js/recorder.js?v=1.2"></script>
    <script src="//use.typekit.net/eam4uba.js"></script>
    <script>try{Typekit.load();}catch(e){}</script>
